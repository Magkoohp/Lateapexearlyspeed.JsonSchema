<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>High performance Json Schema implementation for .Net</Title>
    <Authors>Lateapexearlyspeed</Authors>
    <Description>High performance Json Schema implementation for .Net</Description>
    <PackageReadmeFile>nuget.readme.md</PackageReadmeFile>
    <PackageIcon>nuget.icon.jpg</PackageIcon>
    <PackageTags>Json;Schema;Json schema;JsonSchema;Validation</PackageTags>
    <PackageOutputPath>bin\Release\NugetPackage</PackageOutputPath>
    <Version>1.0.0-beta1</Version>
    <AssemblyVersion>1.0.0.1</AssemblyVersion>
    <FileVersion>1.0.0.1</FileVersion>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningLevel>6</WarningLevel>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <WarningLevel>6</WarningLevel>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <None Update="nuget.icon.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="nuget.readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <!-- Refer to: https://makolyte.com/dotnet-copy-files-to-a-specified-directory-after-the-build/ -->
  <Target Name="Obfuscar" AfterTargets="Build" Condition="$(UseObfuscator)==true And $(Configuration)==Release">
    <Message Text="Executing obfuscar task..." Importance="High" />
    <Exec Command="obfuscar.console obfuscar-config.xml" />
    <Message Text="Finished obfuscar task." Importance="High" />

    <Copy
      SourceFiles="$(TargetDir)Obfuscator_Output\$(ProjectName).dll"
      DestinationFolder="$(TargetDir)" />
    <Message Text="Finished copying obfuscar output back to project output folder." Importance="High" />
  </Target>

</Project>
